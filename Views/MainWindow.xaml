<Window x:Class="DeepDenoiseClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DeepDenoiseClient.Views.Tabs"
        xmlns:conv="clr-namespace:DeepDenoiseClient.Utils.Converters"
        Title="Deep Denoise Client"
        Width="1680" Height="950"
        Background="{StaticResource BrushBg}"
        WindowStartupLocation="CenterScreen">

    <!-- Outer grid: header row + content row -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <!-- header -->
            <RowDefinition Height="Auto"/>
            <!-- content -->
            <RowDefinition Height="*"/>
            <!-- status bar -->
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>

        <!-- Header (spans both columns) -->
        <Border Style="{StaticResource Card}" Grid.Row="0">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock Text="Profile"
                        Height="{StaticResource FieldHeight}"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0"
                        Foreground="{StaticResource BrushSubText}"/>

                    <ComboBox Width="160"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Padding="8,0,8,0"
                        ItemsSource="{Binding Profiles}"
                        SelectedItem="{Binding SelectedProfile}"/>

                    <Button Content="Ping"
                        Margin="0,0,8,0"
                        Command="{Binding PingCommand}"/>

                    <TextBlock Text="Status:"
                        Height="{StaticResource FieldHeight}"
                        VerticalAlignment="Center"
                        Margin="12,0,4,0"
                        Foreground="{StaticResource BrushSubText}"/>

                    <TextBlock Text="{Binding PingResult}"
                        Height="{StaticResource FieldHeight}"
                        VerticalAlignment="Center"
                        FontWeight="Bold"/>
                </StackPanel>
                <TextBlock Text="Deep Denoise Test Client"
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   Foreground="{StaticResource BrushSubText}"/>
            </DockPanel>
        </Border>

        <!-- Content row: left = tabs, right = logs -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="800"/>
                <!-- main work area -->
                <ColumnDefinition Width="*"/>
                <!-- logs -->
            </Grid.ColumnDefinitions>

            <!-- Left: Tabs -->
            <Border Style="{StaticResource Card}" Margin="0,0,16,0">
                <TabControl Background="{StaticResource BrushCard}">
                    <TabItem Header="HTTP">
                        <views:HttpTab/>
                    </TabItem>
                    <TabItem Header="gRPC">
                        <views:GrpcTab/>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Right: Logs panel (full-height, scrollable) -->
            <Border Grid.Column="1" 
                    Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Logs" Style="{StaticResource SectionTitle}"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding LogEntries}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              RowHeaderWidth="0"
                              FontFamily="Consolas"
                              FontSize="13"
                              Width="Auto"
                              HorizontalAlignment="Left"
                              ScrollViewer.HorizontalScrollBarVisibility="Visible"
                              Margin="0,4,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time"
                                                Binding="{Binding Timestamp, StringFormat=HH:mm:ss.fff}"
                                                Width="110"
                                                SortDirection="Ascending"/>
                            <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="60"/>
                            <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="120"/>
                            <DataGridTextColumn Header="Elapsed(s)" Binding="{Binding ElapsedMs, Converter={StaticResource ElapsedMsToSecConverter}}" Width="90"/>
                            <DataGridTextColumn Header="Status"
                                                Binding="{Binding HttpStatus, Converter={StaticResource HttpDisplayConverter}, ConverterParameter=Status}"
                                                Width="110"/>
                            <DataGridTextColumn Header="KiloBytes" Binding="{Binding KiloBytes}" Width="80"/>
                            <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="700"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
        <Border Grid.Row="2"
            Background="{StaticResource BrushCard}"
            Padding="8,0"
            BorderThickness="1"
            BorderBrush="{StaticResource BrushBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Status -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Message -->
                    <ColumnDefinition Width="*"/>
                    <!-- Elapsed -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Success / Fail -->
                <TextBlock Grid.Column="0"
                       Margin="0,0,8,0"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource BrushSubText}"
                       Text="{Binding Status.Status}"/>

                <!-- Message -->
                <TextBlock Grid.Column="1"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       Text="{Binding Status.Message}"/>

                <!-- Elapsed (mm:ss) -->
                <TextBlock Grid.Column="2"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource BrushSubText}"
                       Text="{Binding Status.Elapsed, StringFormat={}{0:mm\\:ss\\.ff}, TargetNullValue=00:00.00}" />
            </Grid>
        </Border>
    </Grid>
</Window>
