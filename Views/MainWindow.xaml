<Window x:Class="DeepDenoiseClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DeepDenoiseClient.Views.Tabs"
        Title="Deep Denoise Client"
        Width="1680" Height="900"
        Background="{StaticResource BrushBg}"
        WindowStartupLocation="CenterScreen">

    <!-- Outer grid: header row + content row -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header -->
            <RowDefinition Height="*"/>
            <!-- content -->
        </Grid.RowDefinitions>

        <!-- Header (spans both columns) -->
        <Border Style="{StaticResource Card}" Grid.Row="0">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock Text="Profile"
                        Height="{StaticResource FieldHeight}"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0"
                        Foreground="{StaticResource BrushSubText}"/>

                    <ComboBox Width="160"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Padding="8,0,8,0"
                        ItemsSource="{Binding Profiles}"
                        SelectedItem="{Binding SelectedProfile}"/>

                    <Button Content="Ping"
                        Margin="0,0,8,0"
                        Command="{Binding PingCommand}"/>

                    <TextBlock Text="Status:"
                        Height="{StaticResource FieldHeight}"
                        VerticalAlignment="Center"
                        Margin="12,0,4,0"
                        Foreground="{StaticResource BrushSubText}"/>

                    <TextBlock Text="{Binding PingResult}"
                        Height="{StaticResource FieldHeight}"
                        VerticalAlignment="Center"
                        FontWeight="Bold"/>
                </StackPanel>
                <TextBlock Text="Deep Denoise Test Client"
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   Foreground="{StaticResource BrushSubText}"/>
            </DockPanel>
        </Border>

        <!-- Content row: left = tabs, right = logs -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <!-- main work area -->
                <ColumnDefinition Width="1.2*"/>
                <!-- logs -->
            </Grid.ColumnDefinitions>

            <!-- Left: Tabs -->
            <Border Style="{StaticResource Card}" Margin="0,0,16,0">
                <TabControl Background="{StaticResource BrushCard}">
                    <TabItem Header="HTTP">
                        <views:HttpTab/>
                    </TabItem>
                    <TabItem Header="gRPC">
                        <views:GrpcTab/>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Right: Logs panel (full-height, scrollable) -->
            <Border Grid.Column="1" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Logs" Style="{StaticResource SectionTitle}"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Logs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="{StaticResource BrushSubText}" Text="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
