<UserControl x:Class="DeepDenoiseClient.Views.Tabs.GrpcTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.1*"/>
            <ColumnDefinition Width="2.9*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="0,0,14,0">
            <TextBlock Text="gRPC Flow" Style="{StaticResource SectionTitle}"/>

            <TextBlock Text="gRPC Endpoint" Style="{StaticResource LabelText}"/>
            <TextBox Text="{Binding GrpcVM.GrpcEndpoint, RelativeSource={RelativeSource AncestorType=Window}}"/>

            <TextBlock Text="Input Key" Style="{StaticResource LabelText}"/>
            <TextBox Text="{Binding GrpcVM.InputKey, RelativeSource={RelativeSource AncestorType=Window}}"/>

            <TextBlock Text="Output Key (Option)" Style="{StaticResource LabelText}"/>
            <TextBox Text="{Binding GrpcVM.OutputKey, RelativeSource={RelativeSource AncestorType=Window}}"/>

            <TextBlock Text="Correlation Id" Style="{StaticResource LabelText}"/>
            <TextBox Text="{Binding GrpcVM.CorrelationId, RelativeSource={RelativeSource AncestorType=Window}}"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Send" Command="{Binding GrpcVM.InvokeCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                <Button Content="Cancel" Command="{Binding GrpcVM.InvokeCancelCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Request Body(JSON)" Style="{StaticResource SectionTitle}"/>
            <Border Style="{StaticResource Card}">
                <TextBox AcceptsReturn="True" Height="200" VerticalScrollBarVisibility="Auto"
                 Text="{Binding GrpcVM.RequestJson, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </Border>

            <TextBlock Text="Response" Style="{StaticResource SectionTitle}" Margin="0,12,0,0"/>
            <Border Style="{StaticResource Card}">
                <TextBox AcceptsReturn="True" Height="260" VerticalScrollBarVisibility="Auto"
                 Text="{Binding GrpcVM.ResponseText, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
