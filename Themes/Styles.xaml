<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Colors: Light theme -->
    <Color x:Key="PrimaryColor">#60A5FA</Color>
    <Color x:Key="PrimaryDark">#3B82F6</Color>

    <Color x:Key="BgColor">#F7FAFC</Color>
    <!-- 전체 배경 -->
    <Color x:Key="CardColor">#FFFFFF</Color>
    <!-- 카드/패널 -->
    <Color x:Key="TextColor">#1A202C</Color>
    <!-- 본문 텍스트 -->
    <Color x:Key="SubTextColor">#4A5568</Color>
    <!-- 보조 텍스트 -->
    <Color x:Key="BorderColor">#CBD5E0</Color>
    <!-- 입력창 테두리 -->
    <Color x:Key="FieldBg">#FFFFFF</Color>
    <!-- 입력창 배경 -->
    <Color x:Key="MutedBg">#EDF2F7</Color>
    <!-- ProgressBar 등 옅은 배경 -->

    <SolidColorBrush x:Key="BrushPrimary" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="BrushPrimaryDark" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="BrushBg" Color="{StaticResource BgColor}"/>
    <SolidColorBrush x:Key="BrushCard" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="BrushText" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="BrushSubText" Color="{StaticResource SubTextColor}"/>
    <SolidColorBrush x:Key="BrushBorder" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BrushFieldBg" Color="{StaticResource FieldBg}"/>
    <SolidColorBrush x:Key="BrushMutedBg" Color="{StaticResource MutedBg}"/>

    <!-- Spacing / radius -->
    <CornerRadius x:Key="CornerRadius">10</CornerRadius>
    <sys:Double x:Key="Spacing">10</sys:Double>
    <sys:Double x:Key="BigSpacing">16</sys:Double>
    <sys:Double x:Key="FieldHeight">34</sys:Double>
    <sys:Double x:Key="BtnHeight">34</sys:Double>
    <Thickness x:Key="CardPadding">14</Thickness>
    <sys:Double x:Key="SectionGap">12</sys:Double>
    <sys:Double x:Key="TitleSize">18</sys:Double>
    <sys:Double x:Key="LabelSize">12</sys:Double>

    <!-- Text -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style x:Key="LabelText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource BrushSubText}"/>
        <Setter Property="FontSize" Value="{StaticResource LabelSize}"/>
        <Setter Property="Margin" Value="0,10,0,4"/>
    </Style>

    <!-- Card -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadius}"/>
        <Setter Property="Background" Value="{StaticResource BrushCard}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Effect">
            <Setter.Value>
                <!-- 라이트 테마에서도 살짝 그림자 -->
                <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="14" Direction="270" ShadowDepth="2"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Button: 좌우 패딩 늘림 + 최소 너비 -->
    <Style TargetType="Button">
        <Setter Property="Height" Value="{StaticResource BtnHeight}"/>
        <Setter Property="MinWidth" Value="96"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="{StaticResource BrushPrimary}"/>
        <Setter Property="Padding" Value="16,0"/>
        <!-- 가로 여유 -->
        <Setter Property="Margin" Value="0,0,8,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource CornerRadius}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource BrushPrimaryDark}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Height" Value="{StaticResource FieldHeight}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
        <Setter Property="Background" Value="{StaticResource BrushFieldBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
    </Style>

    <!-- ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Height" Value="{StaticResource FieldHeight}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
        <Setter Property="Background" Value="{StaticResource BrushFieldBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,0"/>
        <Setter Property="Margin" Value="8,0,0,0"/>
    </Style>

    <!-- ProgressBar -->
    <Style TargetType="ProgressBar">
        <Setter Property="Height" Value="10"/>
        <Setter Property="Foreground" Value="{StaticResource BrushPrimary}"/>
        <Setter Property="Background" Value="{StaticResource BrushMutedBg}"/>
    </Style>

    <!-- Section title -->
    <Style x:Key="SectionTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TitleSize}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>
</ResourceDictionary>
